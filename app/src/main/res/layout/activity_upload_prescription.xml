<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UploadPrescriptionActivity">

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/image_captured"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="4dp"
            android:layout_marginLeft="6dp"
            android:scaleType="fitXY"
            android:background="@drawable/round_corner_bg"
            android:src="@drawable/ic_launcher_background"/>


        <ImageView
            android:id="@+id/cut_image"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:id="@+id/capture"
            android:visibility="gone"
            android:text="capture"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_layout">

        <com.marolix.doctorapp.font.TextView_AvenirLTStd_Roman
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/upload_prescription"
            android:layout_margin="8dp"
            android:background="@drawable/round_solid_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="Upload Prescription"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
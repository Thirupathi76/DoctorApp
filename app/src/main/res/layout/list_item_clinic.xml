<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:id="@+id/clinic_layout"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:contentPadding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/clinic_image"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher_background"
                android:padding="4dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/clinic_image"
                    android:layout_gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical">

                        <Button
                            android:id="@+id/rate_bar"
                            android:layout_width="24dp"
                            android:layout_height="20dp"
                            android:layout_gravity="bottom|end"
                            android:background="#00d100"
                            android:text="3.4"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <com.marolix.doctorapp.font.TextView_AvenirLTStd_Roman
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/clinic_feedback"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="8 votes"
                        android:textSize="14sp"
                        android:padding="4dp"/>
                </LinearLayout>
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/clinic_image"
                    android:text="10% off"/>-->
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">

                <com.marolix.doctorapp.font.TextView_AvenirLTStd_Roman
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/clinic_name"
                    android:textStyle="bold"
                    android:text="Doctor Anand"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="4dp"/>

                <com.marolix.doctorapp.font.TextView_AvenirLTStd_Roman
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/clinic_speciality"
                    android:maxLines="2"
                    android:text="Ophthalmologist, General Physician"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="4dp"/>


                <com.marolix.doctorapp.font.TextView_AvenirLTStd_Roman
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/clinic_address"
                    android:textColor="@color/black"
                    android:text="Visits to Gachibowli"
                    android:textSize="16sp"
                    android:padding="4dp"/>



            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="view profile"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:background="@drawable/round_corner_bg"/>
            <TextView
                android:id="@+id/book_clinic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book "
                android:maxLines="1"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:padding="4dp"

                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/round_solid_bg"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
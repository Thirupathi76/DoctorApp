<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_cart"
    android:layout_margin="4dp"
    app:cardCornerRadius="5dp"
    app:contentPadding="4dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/bike_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:visibility="gone"
                android:layout_height="40dp"
                android:layout_margin="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel"
                android:lineSpacingExtra="-2dp"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:text="Chicken frankies"
                android:textSize="16sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/single_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rest_name"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="2dp"
                android:text="Paradise, Gachibowli"
                android:textSize="12sp"
                app:fontFamily="monospace" />

            <TextView
                android:id="@+id/spl_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addr_rest"
                android:paddingLeft="2dp"
                android:text="Cafe, Desserts"
                android:textSize="12sp"
                android:visibility="gone"
                app:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/price_select_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="6dp"
            android:background="@drawable/round_corners_background"
            android:gravity="center">

            <TextView
                android:id="@+id/item_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"

                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="-" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textMenuName"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:maxLines="1"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/item_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:clickable="true"
                android:gravity="center"
                android:text="+" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:text="\u20B9765"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>